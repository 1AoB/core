{
private:

    ::std::vector< css::uno::Reference< css::accessibility::XAccessibleEventListener > >
                                                                        mxEventListeners;
    std::mutex                                                          maMutex;
    ThumbnailViewItem*                                                  mpThumbnailViewItem;

